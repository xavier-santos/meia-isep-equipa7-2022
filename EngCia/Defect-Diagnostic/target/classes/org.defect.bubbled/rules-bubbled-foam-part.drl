package org.defect.bubbled;

import org.engcia.model.Evidence;
import org.engcia.model.Hypothesis;
import org.engcia.model.Conclusion;
import org.engcia.model.Fact;

import function org.engcia.view.UI.answer;

query "Conclusions"
	$conclusion : Conclusion()
end

rule "r1"
	when
		eval(answer(Evidence.INJECTION_TRAJECTORY, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.TRAJECTORY_CORRECTION);
		insert(c);
end

rule "r2"
	when
		eval(answer(Evidence.AUTOVENT_OPERATION, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.AUTOVENT_MAINTENANCE);
		insert(c);
end

rule "r3"
	when
		eval(answer(Evidence.SEAL_ANOMALIES, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.MOLD_REVISION);
		insert(c);
end

rule "r4"
	when
		eval(answer(Evidence.SEAL_TAPE, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.SEAL_TAPE_PLACING);
		insert(c);
end

rule "r5"
	when
		eval(answer(Evidence.SEAL_TAPE_STATE, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.SEAL_TAPE_REPLACING);
		insert(c);
end

rule "r6"
	when
		eval(answer(Evidence.SEAL_TAPE_POSITION, "no" ))
	then
		Conclusion c = new Conclusion(Conclusion.SEAL_TAPE_POSITION_CORRECTION);
		insert(c);
end

rule "r7"
	when
		eval(answer(Evidence.SEAL_TAPE_POSITION, "yes" ))
	then
		Conclusion c = new Conclusion(Conclusion.MOLD_REVISION);
		insert(c);
end

rule "unknown"
	when
		not Conclusion()
	then
		Conclusion c = new Conclusion(Conclusion.UNKNOWN);
		insert(c);
end

query "evidence"(String ev, String v)
	e : Evidence( evidence == ev, value == v )
end

